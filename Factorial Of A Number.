
#include<iostream>
using namespace std;

int fact(int n){ //Function fact defined.
	if(n==1){
		return 1;
	}
	else{
		return (n*fact(n-1));
	}
}
int main(){   //Main Function
	int n;
	cout<<"Enter the number: "; //Taking the number as user input.
	cin>>n;
	
	cout<<"The factorial of entered number is: "<<fact(n); //Displaying the output by calling the fact function recursively.
}
